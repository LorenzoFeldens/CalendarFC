<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_app"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_logo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="30.0dip"
                    android:background="@drawable/logo"
                    android:contentDescription="@string/descriptions_app_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_margin="15.0dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_Main_my_teams"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.0dip"
                        android:layout_marginTop="15.0dip"
                        android:background="@drawable/button_shape"
                        android:gravity="fill_vertical|center"
                        android:onClick="myTeams_Main"
                        android:padding="15.0dip"
                        android:shadowColor="#ff000000"
                        android:shadowDx="3.0"
                        android:shadowDy="3.0"
                        android:shadowRadius="9.0"
                        android:text="@string/button_Main_my_teams_text"
                        android:textColor="#ffffffff"
                        android:textSize="24.0dip" />

                    <Button
                        android:id="@+id/button_Main_next_games"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.0dip"
                        android:layout_marginTop="15.0dip"
                        android:background="@drawable/button_shape"
                        android:gravity="fill_vertical|center"
                        android:onClick="nextGames_Main"
                        android:padding="15.0dip"
                        android:shadowColor="#ff000000"
                        android:shadowDx="3.0"
                        android:shadowDy="3.0"
                        android:shadowRadius="9.0"
                        android:text="@string/button_Main_next_games_text"
                        android:textColor="#ffffffff"
                        android:textSize="24.0dip" />

                    <Button
                        android:id="@+id/button_Main_options"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.0dip"
                        android:layout_marginTop="15.0dip"
                        android:background="@drawable/button_shape"
                        android:gravity="fill_vertical|center"
                        android:onClick="options_Main"
                        android:padding="15.0dip"
                        android:shadowColor="#ff000000"
                        android:shadowDx="3.0"
                        android:shadowDy="3.0"
                        android:shadowRadius="9.0"
                        android:text="@string/button_Main_options_text"
                        android:textColor="#ffffffff"
                        android:textSize="24.0dip" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView_banner_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/ads_banner_main" />
            -->

    </LinearLayout>
</RelativeLayout>